
-- ROLLBACK example
BEGIN;
UPDATE CustomerNote
SET note_text = 'בדיקה זמנית'
WHERE is_important = TRUE;
SELECT * FROM CustomerNote WHERE is_important = TRUE;
ROLLBACK;

-- COMMIT example
BEGIN;
UPDATE CustomerNote
SET note_text = 'עודכנה על ידי מערכת'
WHERE is_important = TRUE;
SELECT * FROM CustomerNote WHERE is_important = TRUE;
COMMIT;
SELECT * FROM CustomerNote WHERE is_important = TRUE;
